</head>
<body>
    <div>
        @if (Session["USUARIO"] != null)
        {
            Proyecto2.ClienteWeb.Models.Usuario userLogueado = Session["USUARIO"] as Proyecto2.ClienteWeb.Models.Usuario;
            Caja cajaAbierta = Session["CAJA"] as Caja;
            <div class="jumbotron text-center" style="margin-bottom:0">
                <h1>Abrir Caja</h1>
                <p>@userLogueado.Nombre - USUARIO: @userLogueado.Id_Usuario.ToString()</p>
                <a href="@Url.Action("vRegresar","Regresar")" class="btn btn-info">Regresar</a>
            </div>

            using (Html.BeginForm("IngresarEgreso", "Egreso", FormMethod.Post))
            {
                <div id="SeleccionarTipoPago">
                    <div class="form-group">
                        <label for="TipoPago">Tipo de pago:</label>
                        <select id="TipoPago" name="TipoPago">
                            @using (Html.BeginForm())
                            {
                                foreach (var item in Model)
                                {
                                    <option value="@item.TipoPago">@item.Nombre</option>
                                }
                            }
                        </select>
                    </div>
                    <div>
                        <label for="MontoPagar">Monto a pagar:</label>
                        <input type="text" name="MontoPagar" value="" placeholder="100"/>
                    </div>
                    <div>
                        <label for="NoRecibo">No. Recibo:</label>
                        <input type="text" name="NoRecibo" value="" placeholder="No-9942"/>
                    </div>
                    <input id="btn" name="btn" type="submit" value="Pagar" class="btn btn-primary" />
                </div>
            }


            <div id="btn10-div">
                <table>
                    <tr>
                        <td><h2>Sesión</h2></td>
                    </tr>
                    <tr>
                        <td><a href="@Url.Action("vFinalizado","CerrarSesion")" class="btn btn-secondary">Cerrar Sesión</a></td>
                    </tr>
                </table>
            </div>


        }
        else
        {
            <h2>ERROR: INICIAR SESION</h2>
        }
    </div>
</body>
</html>

