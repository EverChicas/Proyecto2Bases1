@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>NUEVO PRODUCTO</title>
    <link type="text/css" href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-3.0.0.min.js"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        #form-div {
            position: absolute;
            left: 40%;
            top: 30%;
            border: 1px solid #ccc;
            padding: 10px 10px;
        }
    </style>
</head>
<body>

    @if (Session["USUARIO"] != null)
    {
        Proyecto2.ClienteWeb.Models.Usuario userLogueado = Session["USUARIO"] as Proyecto2.ClienteWeb.Models.Usuario;
    <div class="jumbotron text-center" style="margin-bottom:0">
        @if (userLogueado.Rol_Usuario == 1)
        {
            <h1>Panel Administrador - Crear Producto</h1>
        }
        else
        {
            <h1>Panel Empleado - Crear Producto</h1>
        }
        <p>@userLogueado.Nombre - USUARIO: @userLogueado.Id_Usuario.ToString()</p>
        <a href="@Url.Action("vRegresar","Regresar")" class="btn btn-info">Regresar</a>
    </div>

        <div id="form-div">
            <ul class="pagination justify-content-center" style="margin:20px 0">
                <div class="container">
                    @using (Html.BeginForm("creandoNuevoProducto", "NuevoProducto", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label for="Nombre">Nombre Producto:</label>
                            <input type="text" class="form-control" name=nombre id="nombre" placeholder="nombre producto">
                        </div>
                        <div class="form-group">
                            <label for="Precio">Precio:</label>
                            <input type="text" class="form-control" name=precio id="precio" placeholder="Ej. 2.50">
                        </div>
                        <div class="form-group">
                            <label for="unidades_disponibles">Unidades:</label>
                            <input type="text" class="form-control" name=unidades_disponibles id="unidades_disponibles" placeholder="Unidades disponibles">
                        </div>
                        <input id="btn" name="btn" type="submit" value="Crear Producto" class="btn btn-primary" />
                    }
                </div>
            </ul>
        </div>
    }
    else
    {
        <h2>ERROR: INICIAR SESIÓN</h2>
    }
</body>
</html>

