@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>INVENTARIO GENERAL</title>
    <link type="text/css" href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-3.0.0.min.js"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        #form-div {
            position: absolute;
            left: 40%;
            top: 30%;
            border: 1px solid #ccc;
            padding: 10px 10px;
        }

        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>

    @if (Session["USUARIO"] != null)
    {
        Proyecto2.ClienteWeb.Models.Usuario userLogueado = Session["USUARIO"] as Proyecto2.ClienteWeb.Models.Usuario;
        <div class="jumbotron text-center" style="margin-bottom:0">
            @if (userLogueado.Rol_Usuario == 1)
            {
                <h1>Panel Administrador - Inventario General</h1>
            }
            else
            {
                <h1>Panel Empleado - Inventario General </h1>
            }
            <p>@userLogueado.Nombre - USUARIO: @userLogueado.Id_Usuario.ToString()</p>
            <a href="@Url.Action("vRegresar","Regresar")" class="btn btn-info">Regresar</a>
        </div>
        <div id="form-div">
            <ul class="pagination justify-content-center" style="margin:20px 0">
                <div class="container">
                    @using (Html.BeginForm("mostrandoProductos", "InventarioGeneral", FormMethod.Post))
                    {
                        <input id="btn" name="btn" type="submit" value="Detalles" class="btn btn-primary" />
                    }
                    <table>
                        <tr>
                            <th>ID</th>
                            <th>PRODUCTO</th>
                            <th>PRECIO</th>
                            <th>UNIDADES DISPONIBLES</th>
                        </tr>
                        @{
                            if (Session["INVENTARIO_GENERAL"] != null)
                            {
                                List<Producto> lp = Session["INVENTARIO_GENERAL"] as List<Producto>;
                                foreach (Producto pr in lp)
                                {
                                    <tr>
                                        <td>@pr.producto.ToString()</td>
                                        <td>@pr.Nombre</td>
                                        <td>@pr.Precio.ToString()</td>
                                        <td>@pr.unidades_disponibles.ToString()</td>
                                    </tr>
                                }
                            }
                        }
                    </table>
                </div>
            </ul>
        </div>
    }
    else
    {
        <h2>ERROR: INICIAR SESIÓN</h2>
    }
</body>
</html>







