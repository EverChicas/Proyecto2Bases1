
@{
    ViewBag.Title = "LOG REPORT";
}

<!DOCTYPE html>
<html>
<head>
    <title>LOG REPORT</title>
</head>
<body>

    <div class="jumbotron text-center" style="margin-bottom:0">
        <h1>REPORTE MENSUAL DE MOVIMIENTOS</h1> <br />
        <a href="@Url.Action("vRegresar","Regresar")" class="btn btn-info">Regresar</a>
    </div>
    <br />
    <br />
    <div id="form-div">
        <ul class="pagination justify-content-center" style="margin:20px 0">
            <div class="container">
                <table class="table table-bordered">
                    <tr>
                        <td>Fecha-Hora</td>
                        <td>Descripcion</td>
                        <td>Monto</td>
                        <td>Usuario</td>
                    </tr>
                    @{
                        if (Session["LOG_MENSUAL"] != null)
                        {
                            List<Log> lp = Session["LOG_MENSUAL"] as List<Log>;
                            foreach (Log pr in lp)
                            {
                                <tr>
                                    <td>@pr.FechaHora.ToString()</td>
                                    <td>@pr.Descripcion</td>
                                    <td>@pr.MontoMovimiento.ToString()</td>
                                    <td>@pr.Usuario.ToString()</td>
                                </tr>
                            }
                        }
                    }
                </table>

            </div>
    </div>
    </ul>
    <a href="@Url.Action("ExportarPDF","LogMensual")" class="btn btn-success">Descargar Reporte</a>
    </div>
</body>
</html>
