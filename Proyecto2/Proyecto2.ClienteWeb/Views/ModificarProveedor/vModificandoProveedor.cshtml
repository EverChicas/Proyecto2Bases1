@model Proyecto2.ClienteWeb.Models.Proveedor
@{
    ViewBag.Title = "vModificandoProveedor";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MODIFICAR PROVEEDOR</title>
    <link type="text/css" href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-3.0.0.min.js"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        #form-div {
            position: absolute;
            left: 40%;
            top: 30%;
            border: 1px solid #ccc;
            padding: 10px 10px;
        }

        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>
    <div>
        @if (Session["USUARIO"] != null)
        {
            Proyecto2.ClienteWeb.Models.Usuario userLogueado = Session["USUARIO"] as Proyecto2.ClienteWeb.Models.Usuario;
            <div class="jumbotron text-center" style="margin-bottom:0">
                @if (userLogueado.Rol_Usuario == 1)
                {
                    <h1>Panel Administrador - Modificando Proveedor</h1>
                }
                else
                {
                    <h1>Panel Empleado - Modificando Proveedor </h1>
                }
                <p>@userLogueado.Nombre - USUARIO: @userLogueado.Id_Usuario.ToString()</p>
                <a href="@Url.Action("vRegresar","Regresar")" class="btn btn-info">Regresar</a>
            </div>

            using (Html.BeginForm("modificandoProveedor", "ModificarProveedor", FormMethod.Post))
            {

            <div id="detalles-div">
                <div class="form-group">
                    <label>Id:</label>
                    <input type="text" class="form-control" name=proveedor id="proveedor"  value=@Model.proveedor>
                </div>
                <div class="form-group">
                    <label>Nombre:</label>
                    <input type="text" class="form-control" name=nombre id="nombre" value=@Model.Nombre>
                </div>
                <div class="form-group">
                    <label>Direccion:</label>
                    <input type="text" class="form-control" name=direccion id="direccion" value=@Model.Direccion>
                </div>
                <div class="form-group">
                    <label>Correo:</label>
                    <input type="text" class="form-control" name=correo id="correo" value=@Model.Correo>
                </div>
                <div class="form-group">
                    <label>Telefono:</label>
                    <input type="text" class="form-control" name=telefono id="telefono" value=@Model.Telefono>
                </div>

                <br />
                <input id="btn" name="btn" type="submit" value="Guardar Cambios" class="btn btn-success" />
            </div>
                

            }
        }
        else
        {
            <h2>Error: Iniciar Sesión</h2>
        }


    </div>
</body>
</html>