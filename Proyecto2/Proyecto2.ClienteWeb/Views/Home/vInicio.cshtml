@model Usuario
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inicio</title>
    <link type="text/css" href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-3.0.0.min.js"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <style>
        #login-div {
            position: absolute;
            left: 40%;
            top: 30%;
            border: 1px solid #ccc;
            padding: 10px 10px;
        }
    </style>



</head>
<body>

    <div class="jumbotron text-center" style="margin-bottom:0">
        <h1>SISTEMA VENTAS</h1>
        <p>Iniciar Sesión</p>
    </div>



    <div id="login-div">
        <ul class="pagination justify-content-center" style="margin:20px 0">
            <div class="container">
                @using (Html.BeginForm("Autorizar", "Home", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="Usuario">Usuario:</label>
                        <input type="text" class="form-control" name=user id="user" placeholder="12345678">
                    </div>
                    <div class="form-group">
                        <label for="pass">Contraseña:</label>
                        <input type="password" name=pass class="form-control" id="pass" placeholder="Contraseña">
                    </div>
                    <input id="btn" name="btn" type="submit" value="Ingresar" class="btn btn-primary" />
                }
            </div>
        </ul>
    </div>
</body>
</html>